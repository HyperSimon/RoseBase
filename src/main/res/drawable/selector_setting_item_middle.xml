<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/color/android"
          android:enterFadeDuration="200" android:exitFadeDuration="200">

    <item android:state_pressed="true">
        <!--无圆角-->
        <shape>
            <stroke
                android:width="1dp"
                android:color="#55000000"
                android:dashGap="0dp">
            </stroke>
            <solid android:color="@color/emerland"/>
        </shape>
    </item>

    <!--正常情况-->
    <item>
        <!--无圆角-->
        <shape>
            <stroke
                android:width="1dp"
                android:color="#55000000"
                android:dashGap="0dp">
            </stroke>
            <solid android:color="#00000000"/>
        </shape>
    </item>

</selector>
